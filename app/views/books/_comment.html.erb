<div class="comments">

<%= book.book_comments.count %>:comments
<% book.book_comments.each do |book_comment| %>
  <%= link_to user_path(book_comment.user)  do %>
  <p><%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></p>
    <% end %>
  <%= book_comment.user.name %>
  <%= book_comment.created_at.strftime('%Y%m%d') %>
  <%= book_comment.comment %>
   <% if book_comment.user == current_user %>
  <div class="comment-delete">
    <%= link_to "delete", book_book_comment_path(book_comment.book,book_comment), method: :delete %>
  </div>
    <% end %>
  <% end %>
  </div>


  <%= render 'layouts/errors', obj: comment %>
  <%= form_with(model:[book, comment], local: true) do |f| %>
    <%= f.text_area :comment, size:'80x8', placeholder: "Comment here" %><br>
    <%= f.submit "Send" %>
  <% end %>
